@model CategoryModel

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row bp-2">
			<h2>Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3 row">
			<label asp-for="Name">Category Name</label>
			<input asp-for="Name" class="form-control" disabled />
		</div>
		<div class="mb-3 row">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" disabled />
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>