@model List<ProductModel>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>Products</h2>
		</div>
		<div class ="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>  Create new Product
			</a>
		</div>
	</div>
	<div style="overflow-x:auto;">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Title</th>
					<th>Author</th>
					<th>ISBN</th>
					<th>Price</th>
					<th>Description</th>
					<th>Category</th>
					<th> </th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Title</td>
						<td>@obj.Author</td>
						<td>@obj.ISBN</td>
						<td>@obj.Price</td>
						<td>@obj.Description</td>
						<td>@obj.Category.Name</td>
						<td class="text-end">
							<div class="btn-group" role="group">
								<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i>  Edit</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 text-end"><i class="bi bi-trash"></i>  Delete</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>