@model ProductModel

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row bp-2">
			<h2>Delete Product</h2>
			<hr />
		</div>

		<div>
			<div class="mb-3 row">
				<label asp-for="Title">Title</label>
				<input asp-for="Title" disabled class="form-control" />
			</div>
			<div class="mb-3 row">
				<label asp-for="Author">Author</label>
				<input asp-for="Author" disabled class="form-control" />
			</div>
			<div class="mb-3 row">
				<label asp-for="Description">Description</label>
				<input asp-for="Description" disabled class="form-control" />
			</div>
			<div class="mb-3 row">
				<label asp-for="ISBN">ISBN</label>
				<input asp-for="ISBN" disabled class="form-control" />
			</div>
			<div class="mb-3 row">
				<label asp-for="Price">Price</label>
				<input asp-for="Price" disabled class="form-control" />
			</div>
		</div>

		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>