@model ProductModel

<form method="post">
	<div class="card shadow border-0 mt-4 rounded">
		<div class="card-header text-white-50 bg-primary rounded-top">
			<div class="row mt-3">
				<div class="col-12 text-center">
					<h3>@Model.Title</h3>
					<p>by @Model.Author</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="py-3">
				<div class="row">
					<div class="col-6 col-md-2 offset-lg-1 pb-1">
						<a asp-action="Index" class="btn btn-outline-primary btn-sm rounded">Back to home</a>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
						<img src="@Model.ImgUrl" width="100%" class="rounded" />
					</div>
					<div class="col-12 col-lg-6 offset-lg-1">
						<div class="col-12 col-md-6 pb-4">
							<span class="badge rounded-pill bg-warning">@Model.Category.Name</span>
							@* <span class="badge">@Model.Category.Name</span> *@
						</div>
						<div class="row p-lg-2">
							<h6>Description</h6>
							<p>@Model.Description</p>
						</div>
						<div class="row ps-2">
							<h6>ISBN : @Model.ISBN</h6>
						</div>
						<div class="row ps-2 mt-4">
							<h5 class="text-warning">Price: </h5><h3 class="text-warning">@Model.Price.ToString("c")</h3>
						</div>
						<div class="row pl-2 mt-4">
							<div class="col-md-4">
								<div class="input-group mb-3">
									<span class="input-group-text form-control" id="inputGroup-sizing-default">Count</span>
									<input type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-md-6 pb-1">
								<button type="submit" disabled class="btn btn-primary rounded">Add to cart (Comming soon...)</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
